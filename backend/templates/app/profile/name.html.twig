{% extends 'base.html.twig' %}

{% block title %}{% trans %}Changing user name{% endtrans %}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item">{% trans from 'profile'%}User profile{% endtrans %}</li>
    <li class="breadcrumb-item active">{% trans %}Changing user name{% endtrans %}</li>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.first, 'First name'|trans({}, 'app')) }}
                        {{ form_widget(form.first) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.last, 'Last name'|trans({}, 'app')) }}
                        {{ form_widget(form.last) }}
                    </div>
                    <button type="submit" class="btn btn-success">{% trans %}Save{% endtrans %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}