{% extends '@KnpMenu/menu.html.twig' %}

{% block item %}
    {% if item.displayed %}
        {% if matcher.isCurrent(item) %}
            {% do item.setLinkAttribute('class', item.getLinkAttribute('class') ~ ' ' ~ 'c-active') %}
        {% endif %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block label %}
    {% if item.extra('icon') is not null %}
        <i class="{{ item.extra('icon') }}"></i>
    {% endif %}
    {{ parent() }}
{% endblock %}