<a{% for attr, value in options %} {{ attr }}="{{ value }}"{% endfor %} style="color: #000">
    <span class="float-right">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="fas fa-sort-alpha-down"></i>
            {% else %}
                <i class="fas fa-sort-alpha-up-alt"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-sort" style="color: #d2d6de;"></i>
        {% endif %}
    </span>
    {{ title|raw }}
</a>