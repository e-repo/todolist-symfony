{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item">{% trans from 'profile'%}User profile{% endtrans %}</li>
    <li class="breadcrumb-item active">{% trans %}Email{% endtrans %}</li>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-success">Set Email</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}