<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- Custom styles for this template -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body class="c-app">

<div class="c-sidebar c-sidebar-dark c-sidebar-fixed c-sidebar-lg-show" id="sidebar">

    <div class="c-sidebar-brand d-lg-down-none">
        <svg class="c-sidebar-brand-full" width="118" height="46" alt="CoreUI Logo">
            <use xlink:href="/assets/brand/coreui.svg#full"></use>
        </svg>
        <svg class="c-sidebar-brand-minimized" width="46" height="46" alt="CoreUI Logo">
            <use xlink:href="assets/brand/coreui.svg#signet"></use>
        </svg>
    </div>

    <ul class="c-sidebar-nav">
        <li class="c-sidebar-nav-item">
            <a class="c-sidebar-nav-link" href="{{ path('home') }}">
                <i class="c-sidebar-nav-icon cil-home"></i>
                {% trans %}Home page{% endtrans %}
            </a>
        </li>
        <li class="c-sidebar-nav-item">
            <a class="c-sidebar-nav-link" href="{{ path('profile') }}">
                <i class="c-sidebar-nav-icon cil-user"></i>
                {% trans from 'profile' %}User profile{% endtrans %}
            </a>
        </li>
    </ul>

    <button class="c-sidebar-minimizer c-class-toggler" type="button" data-target="_parent" data-class="c-sidebar-minimized"></button>
</div>

<div class="c-wrapper c-fixed-components">
    <header class="c-header c-header-light c-header-fixed c-header-with-subheader">
        <button class="c-header-toggler c-class-toggler mfs-3 d-md-down-none" type="button" data-target="#sidebar" data-class="c-sidebar-lg-show" responsive="true">
            <span class="c-icon c-icon-lg">
                <i class="cil-menu"></i>
            </span>
        </button>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <ul class="c-header-nav ml-auto mr-4">
                <li class="c-header-nav-item dropdown">
                    <a class="c-header-nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.userName }}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right pt-0">
                        <a class="dropdown-item" href="{{ path('profile') }}">
                            <i class="c-icon mr-2 cil-user"></i> {% trans %}Profile{% endtrans %}
                        </a>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">
                            <i class="c-icon mr-2 cil-account-logout"></i> {% trans %}Logout{% endtrans %}
                        </a>
                    </div>
                </li>
            </ul>
        {% endif %}
        <div class="c-subheader px-3">
            <!-- Breadcrumb-->
            <ol class="breadcrumb border-0 m-0">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">{% trans %}Home{% endtrans %}</a></li>
                {% block breadcrumbs %}{% endblock %}
            </ol>
        </div>
    </header>
    <div class="c-body">

        <main class="c-main">
            <div class="container-fluid">
                <div class="fade-in">

                    {% include '_flashes.html.twig' %}
                    {% block body %}{% endblock %}

                </div>
            </div>
        </main>

        <footer class="c-footer">
            <div>EVENING PRODUCTION &copy; 2021 creativeLabs.</div>
            <div class="ml-auto">Powered by&nbsp;evening production</div>
        </footer>

    </div>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>